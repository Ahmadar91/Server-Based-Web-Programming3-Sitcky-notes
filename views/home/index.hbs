<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">
      Snippets
    </h1>
    <p>
      This is an example of an Express website with handling persistent data.
    </p>
    <p>
      <a class="btn btn-primary btn-lg" href="https://expressjs.com/" role="button">
        Learn more Â»
      </a>
    </p>
  </div>
</div>

<div class="container">
  <!-- Example row of columns -->
  <div class="row">
    {{#if viewData.codeSnippets.length }}
    {{#each viewData.codeSnippets}}
    <div class="col-md-6">
            <h3  class="h3">
        Title:{{this.title}}
      </h3>
      <pre>
      <code>
{{this.description}}
      </code>
      </pre>
      <small>created by {{this.name}}</small>
    </div>
  {{/each}}
    </div>
  {{else}}
  <p> No snippets to display.</p>
  {{/if}}